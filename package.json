{
    "name": "ps-typescript-action",
    "version": "1.0.0",
    "description": "TypeScript template action",
    "keywords": [
        "actions",
        "node",
        "setup"
    ],
    "author": {
        "name": "GitHub Professional Services",
        "email": "services@github.com",
        "url": "https://services.github.com"
    },
    "contributors": [{
        "name": "Hubber name",
        "email": "hubber@github.com",
        "url": "https://github.com/hubber"
    }],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ActionsDest/ps-typescript-action.git"
    },
    "bugs": {
        "url": "https://github.com/ActionsDest/ps-typescript-action/issues"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "pack": "ncc build --source-map --license licenses.txt",
        "test": "jest",
        "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
    },
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@actions/github": "^5.0.0",
        "@octokit/rest": "^18.5.6"
    },
    "devDependencies": {
        "@github/prettier-config": "^0.0.4",
        "@types/jest": "^26.0.23",
        "@types/node": "^16.0.0",
        "@typescript-eslint/parser": "^4.25.0",
        "@vercel/ncc": "^0.28.6",
        "eslint": "^7.17.0",
        "eslint-plugin-github": "^4.1.3",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^27.0.4",
        "jest-circus": "^27.0.4",
        "js-yaml": "^4.1.0",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.2"
    },
    "prettier": "@github/prettier-config"
}